{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,

    "noEmit": true,
    "declaration": false
  },
  "include": [
    "scripts",
    "utils",
    "packages/*/scripts",
    "packages/*/src",
    "packages/*/test",
    "packages/*/index.ts"
  ]
}
